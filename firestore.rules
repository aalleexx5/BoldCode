rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Profiles collection
    match /profiles/{userId} {
      // Anyone authenticated can read all profiles (for displaying user names)
      allow read: if isAuthenticated();

      // Users can create their own profile during signup
      allow create: if isOwner(userId) &&
                       request.resource.data.id == userId &&
                       request.resource.data.email == request.auth.token.email;

      // Users can only update their own profile
      allow update: if isOwner(userId) &&
                       request.resource.data.id == userId &&
                       request.resource.data.email == resource.data.email; // Cannot change email

      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }

    // Clients collection
    match /clients/{clientId} {
      // All authenticated users can read clients (team collaboration)
      allow read: if isAuthenticated();

      // All authenticated users can create clients
      allow create: if isAuthenticated() &&
                       request.resource.data.created_by == request.auth.uid;

      // All authenticated users can update clients
      allow update: if isAuthenticated();

      // All authenticated users can delete clients
      allow delete: if isAuthenticated();
    }

    // Requests collection
    match /requests/{requestId} {
      // All authenticated users can read requests (team collaboration)
      allow read: if isAuthenticated();

      // All authenticated users can create requests
      allow create: if isAuthenticated() &&
                       request.resource.data.created_by == request.auth.uid;

      // All authenticated users can update requests
      allow update: if isAuthenticated();

      // All authenticated users can delete requests
      allow delete: if isAuthenticated();
    }

    // Request Links subcollection
    match /requests/{requestId}/links/{linkId} {
      // All authenticated users can read links
      allow read: if isAuthenticated();

      // All authenticated users can create links
      allow create: if isAuthenticated();

      // All authenticated users can update links
      allow update: if isAuthenticated();

      // All authenticated users can delete links
      allow delete: if isAuthenticated();
    }

    // Request Comments subcollection
    match /requests/{requestId}/comments/{commentId} {
      // All authenticated users can read comments
      allow read: if isAuthenticated();

      // Users can create comments with their own user_id
      allow create: if isAuthenticated() &&
                       request.resource.data.user_id == request.auth.uid;

      // Users can only update their own comments
      allow update: if isAuthenticated() &&
                       resource.data.user_id == request.auth.uid;

      // Users can only delete their own comments
      allow delete: if isAuthenticated() &&
                       resource.data.user_id == request.auth.uid;
    }

    // Cost Tracker subcollection
    match /requests/{requestId}/cost_tracker/{trackerId} {
      // All authenticated users can read cost tracking entries
      allow read: if isAuthenticated();

      // Users can create cost tracking entries with their own user_id
      allow create: if isAuthenticated() &&
                       request.resource.data.user_id == request.auth.uid;

      // Users can only update their own cost tracking entries
      allow update: if isAuthenticated() &&
                       resource.data.user_id == request.auth.uid;

      // Users can only delete their own cost tracking entries
      allow delete: if isAuthenticated() &&
                       resource.data.user_id == request.auth.uid;
    }

    // Activity Logs subcollection
    match /requests/{requestId}/activity_logs/{logId} {
      // All authenticated users can read activity logs
      allow read: if isAuthenticated();

      // System/authenticated users can create activity logs
      allow create: if isAuthenticated() &&
                       request.resource.data.user_id == request.auth.uid;

      // Activity logs cannot be updated or deleted (immutable audit trail)
      allow update: if false;
      allow delete: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
